<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="./styles.css">
    <title>Members Only</title>
  </head>
  <body>
    <%- include("./partials/navbar.ejs") %> 
    <div class="content">
    <% if (locals.user) {%>
        <h1 class="greeting">Most Recent Posts</h1>
        <div class="club-message-container">
          <form action="" method="POST" class="add-post-form">
            <div class="post-title-container">
              <label for="title">Title:</label>
              <input type="text" id="title" name="title" maxlength="50" placeholder="The title is optional!">
            </div>

            <div class="post-message-container">
              <label for="message">Message:</label>
            <textarea name="message" id="message"  placeholder="Type the message you want the world to hear here!" required></textarea>
            </div>
            
            <button type="submit" class="post-message-btn">Post</button>
          </form>
      <div class="divider"></div>
      <%- include("./partials/loadAllPosts") %>
    <% } else {%>
            <h1 class="signup-link">Please <a href="login" title="log-in">login</a> to add a post</h1>
            <div class="divider"></div>
            <%- include("./partials/loadAllPosts") %>
    <% } %>
    </div>
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
      lucide.createIcons();
    </script>
  </body>
</html>
